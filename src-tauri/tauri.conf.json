{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-yz",
  "version": "0.1.0",
  "identifier": "com.elecmonkey.tauri-yz",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "拼图大师-SLA",
        "width": 1330,
        "height": 875,
        "resizable": false,
        "maximizable": false,
        "minimizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self' https: http: data: blob: 'unsafe-inline' 'unsafe-eval'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "http": {
      "all": true,
      "request": true
    }
  }
}
